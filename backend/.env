# Server Configuration
PORT=5000
NODE_ENV=development
API_VERSION=v1
BASE_URL=http://localhost:5000

# MongoDB Configuration
# Replace with your actual MongoDB Atlas URI but never commit the real credentials
MONGODB_URI=
MONGODB_USER=
MONGODB_PASSWORD=

# Authentication
# Generate new secure secrets using crypto.randomBytes(64).toString('hex')
JWT_SECRET
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_SECRET=
REFRESH_TOKEN_EXPIRES_IN=7d

# Email Configuration (Using Gmail SMTP or other provider)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_FROM_NAME=

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Security
CORS_ORIGIN=http://localhost:3000,https://copabudhabi.org
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
PASSWORD_RESET_TOKEN_EXPIRES_IN=3600000  # 1 hour in milliseconds

# Security Headers
SECURITY_HEADERS_ENABLED=true
HELMET_ENABLED=true
XSS_PROTECTION=true
CONTENT_SECURITY_POLICY_ENABLED=true

# Logging
LOG_LEVEL=debug  # Use 'info' in production
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/app.log

# Redis Configuration (for caching and session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://localhost:6379

# Church Specific Configuration
CHURCH_NAME=
CHURCH_SHORT_NAME=
CHURCH_TIMEZONE=i
CHURCH_CONTACT_EMAIL=g
CHURCH_CONTACT_PHONE=

# Admin Configuration
ADMIN_EMAIL=
SUPER_ADMIN_EMAIL=

# Payment Gateway (if implementing donations)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Push Notifications (if implementing)
FIREBASE_SERVER_KEY=
FIREBASE_SENDER_ID=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# JWT Configuration
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_REFRESH_SECRET=

# Gmail Configuration
EMAIL_FROM=
EMAIL_FROM_NAME=
EMAIL_APP_PASSWORD=
